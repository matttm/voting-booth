{
  "name": "voting-booth-backend",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npx yarn-run-all clean transpile",
    "server": "node ./dist-server/bin/index.js",
    "dev": "cross-env NODE_ENV=development npx yarn-run-all build server",
    "prod": "cross-env NODE_ENV=production npx yarn-run-all build server",
    "transpile": "babel ./src/server --out-dir dist-server",
    "clean": "rimraf dist-server"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10"
          }
        }
      ]
    ]
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "express-jwt": "^6.0.0",
    "js-sha256": "^0.9.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "superagent": "^6.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "cross-env": "^7.0.2",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "yarn-run-all": "^3.1.1"
  }
}
